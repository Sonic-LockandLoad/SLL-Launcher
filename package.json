{
    "name": "sll-launcher",
    "description": "Sonic: Lock & Load Launcher",
    "author": "Arsalan 'Aeria' Kazmi",
    "version": "1.0.0",
    "main": "dist/main.js",
    "keywords": ["game", "doom", "sonic", "fan game", "electron"],
    "license": "GPL-3.0-or-later",
    "scripts": {
        "clean": "rm -r dist",
        "compile": "tsc",
        "copy": "cp -r ./src/* ./dist --verbose",
        "start": "electron dist/main.js",
        "build": "electron-builder"
    },
    "devDependencies": {
        "@types/electron": "^1.6.10",
        "@types/node": "^22.4.0",
        "axios": "^1.7.4",
        "electron": "^31.4.0",
        "electron-builder": "^24.13.3",
        "simple-git": "^3.25.0",
        "typescript": "^5.5.4",
        "yauzl": "^3.1.3"
    },
    "build": {
        "appId": "io.aeriavelocity.sll-launcher",
        "productName": "Sonic: Lock & Load Launcher",
        "copyright": "Copyright Â© 2024 Arsalan 'Aeria' Kazmi",
        "files": [
            "dist/**/*",
            "node_modules/"
        ],
        "directories": {
            "output": "out"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": ["AppImage", "deb", "rpm"]
        },
        "mac": {
            "target": "dmg"
        }
    }
}